<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |login_form| %>

      <%= login_form.label :email %>
      <%= login_form.email_field :email, class: 'form-control' %>

      <%= login_form.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= login_form.password_field :password, class: 'form-control' %>


      <%= login_form.label :remember_me, class: "checkbox inline" do %>
        <%= login_form.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= login_form.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
