<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |user_form| %>
      <%= render 'shared/error_messages', object: user_form.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= user_form.label :password %>
      <%= user_form.password_field :password, class: 'form-control' %>

      <%= user_form.label :password_confirmation, 'Confirmation' %>
      <%= user_form.password_field :password_confirmation, class: 'form-control' %>

      <%= user_form.submit 'Update password', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
